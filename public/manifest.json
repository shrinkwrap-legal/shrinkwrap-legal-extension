{
  "manifest_version": 3,

  "name": "Shrinkwrap.legal",
  "description": "Gerichtsurteile, passend verpackt.",
  "version": "0.0.5",
  "default_locale": "de",

  "icons": {
    "128": "icon.png"
  },

  "action": {
    "default_title": "Click to open panel",
    "default_icon": "icon.png"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "content_scripts": [
      {
          "matches": ["https://ris.bka.gv.at/*", "https://www.ris.bka.gv.at/*"],
          "js": ["js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "sidePanel"
  ],

  "host_permissions": [
    "https://ris.bka.gv.at/*", "https://www.ris.bka.gv.at/*"
  ]
}
